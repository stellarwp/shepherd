{
  "name": "stellarwp/pigeon",
  "description": "A library for offloading tasks to background processes.",
  "type": "library",
  "license": "GPL-2.0",
  "config": {
    "platform": {
      "php": "7.4"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "StellarWP\\Pigeon\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "StellarWP\\Pigeon\\Tests\\": "tests/_support/Helper/"
    }
  },
  "authors": [
    {
      "name": "StellarWP",
      "email": "dev@stellarwp.com"
    },
    {
      "name": "Dimitrios Pantazis",
      "email": "dimi@stellarwp.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.4",
    "lucatume/di52": "^4.0",
    "stellarwp/db": "^1.1",
    "stellarwp/schema": "^2.0",
    "woocommerce/action-scheduler": "3.9.2"
  },
  "require-dev": {
    "stellarwp/coding-standards": "^2.1",
    "codeception/module-asserts": "^2.0",
    "codeception/module-cli": "^2.0",
    "codeception/module-db": "^2.1",
    "codeception/module-filesystem": "^2.0",
    "codeception/module-phpbrowser": "^2.0",
    "codeception/module-rest": "^2.0",
    "codeception/module-webdriver": "^2.0",
    "codeception/util-universalframework": "^1.0",
    "lucatume/wp-browser": "^3.0.15"
  },
  "scripts": {
    "test:analysis": [
      "phpstan analyse -c phpstan.neon.dist --memory-limit=512M"
    ]
  },
  "scripts-descriptions": {
    "test:analysis": "Run static code analysis."
  }
}
